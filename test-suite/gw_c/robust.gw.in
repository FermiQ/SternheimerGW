Screened Coulomb for the full mesh.
&inputgw

  ! config of the scf run
  prefix       = 'diamond',
  outdir       = './tmp'

  ! control parameters
  ldisp        = .true.
  multishift   = .true.
  double_grid  = .false.

  ! the grid used for the linear response
  nq1          = 2
  nq2          = 2
  nq3          = 2

  ! truncation (used for both correlation and exchange)
  truncation   = 'on'

  ! configuration for the exchange self-energy
  do_sigma_exx = .true.
  ecutsex      = 15.0

  ! configuration for the correlation self energy
  do_sigma_c   = .true.
  kpoints      = .true.
  ecutsco      = 6.0

  ! configuration of the Coulomb solver
  do_coulomb   = .false.
  tr2_gw       = 1.0d-4
  nmix_gw      = 4
  solve_direct = .true.
  use_symm     = .true.
  lrpa         = .true.
  godbyneeds   = .false.
  padecont     = .false.
  paderobust   = .true.

  ! configuration of the Green solver
  tr2_green    = 1.0d-5
  maxter_green = 180

  ! configuration of W in the convolution
  do_imag      = .false.
  eta          = 0.00735 ! 0.1eV
  wcoulmax     = 80
  nwcoul       = 200
  
  ! configuration for the self-energy (result of the convolution)
  wsigmamin    = -45.0
  wsigmamax    =  15.0
  nwsigma      = 121

  ! configuration for the output
  do_sigma_matel = .true.
  nbnd_sig       = 8

/

