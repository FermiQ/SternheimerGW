[SGW]
exe = ./run-sgw.sh
extract_program = ./extract-sgw.sh
input_args = ('*.in', '')
run_cmd_template = tc.program tc.input tc.output tc.error
tolerance = ( (1.0e-6, 5.0e-3, 'e1'),
              (3.0e+0, 5.0e-1, 'n1'),
              (1.0e-3, 1.0e-5, 'f1'),
              (1.0e-1, 1.0e-3, 'p1') )
skip_program = grep
skip_args = 'not present in this version'

[user]
benchmark = v0.10
date_fmt = %d%m%y
diff = vimdiff

