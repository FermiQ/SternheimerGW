!
! test if the linear solver works
!

! test without multishift
@test(npes=[1])
SUBROUTINE test_bicgstab(this)

  USE bicgstab_module,       ONLY: bicgstab
  USE kinds,                 ONLY: dp
  USE linear_problem_module, ONLY: linear_problem_read
  USE pfunit_mod

  IMPLICIT NONE

  CLASS(MpiTestMethod) :: this

  ! name of the file that is tested
  CHARACTER(*), PARAMETER :: filename = 'lin_prob.xml'

  ! the parts of the linear problem
  COMPLEX(dp), ALLOCATABLE :: AA(:,:), bb(:), xx(:,:), sigma(:)

  ! flag indicates if the file exists
  LOGICAL lexist

  ! counter on the frequencies
  INTEGER ifreq

  ! abort if the file does not exist
  INQUIRE(FILE = filename, EXIST = lexist)
  IF (.NOT.lexist) THEN
    WRITE(0,*) 'file ' // filename // ' not found'
    WRITE(0,*) 'test of linear solver aborted'
    RETURN
  END IF

  CALL linear_problem_read(filename, AA, sigma, bb, xx)

END SUBROUTINE test_bicgstab
