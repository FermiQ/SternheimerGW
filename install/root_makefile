include ../module
include $(ESPRESSO)/make.inc

MODULE =@MOD@
MODULE_LIB = $(foreach file, $(MODULE), $(file)/src/lib$(file).a)
LIB = lib@LIB@.a

all: module $(LIB)

$(LIB): $(MODULE_LIB)
	rm -f $@
	$(AR) -rcT $@ $(MODULE_LIB)

module:
	for file in $(MODULE); do \
	  make -C $$file; \
	done

depend:
	for file in $(MODULE); do \
	  make -C $$file depend; \
	done

test:
	for file in $(MODULE); do \
	  make -C $$file test; \
	done

clean:
	for file in $(MODULE); do \
	  make -C $$file clean; \
	done

.PHONY: all depend test clean
