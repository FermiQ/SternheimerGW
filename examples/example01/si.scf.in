    calculation='scf',
    restart_mode='from_scratch',
    prefix='si'
    pseudo_dir = './',
    outdir='./tmp'
    wf_collect=.true. 
 /
 &system
    ibrav = 2, celldm(1) =10.26, nat=  2, ntyp= 1,
    ecutwfc = 16.0, force_symmorphic=.true.
 /
